<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/site_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter injury location"/>

    <EditText
        android:id="@+id/severity_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter injury severity..."/>

    <EditText
        android:id="@+id/timeline_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter expected recovery time..."/>

    <EditText
        android:id="@+id/tracker_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter tracker status..."/>

</LinearLayout>
